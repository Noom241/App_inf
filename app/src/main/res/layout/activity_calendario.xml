<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primera Fila de Contenedores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/row1"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Primer Contenedor de la primera fila -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row2"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Segundo Contenedor de la primera fila -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row3"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Tercer Contenedor de la primera fila -->
                </LinearLayout>
            </LinearLayout>

            <!-- Segunda Fila de Contenedores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/row4"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Primer Contenedor de la segunda fila -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row5"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Segundo Contenedor de la segunda fila -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row6"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Tercer Contenedor de la segunda fila -->
                </LinearLayout>
            </LinearLayout>

            <!-- Tercera Fila de Contenedores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/row7"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Primer Contenedor de la tercera fila -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row8"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Segundo Contenedor de la tercera fila -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row9"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Tercer Contenedor de la tercera fila -->
                </LinearLayout>
            </LinearLayout>

            <!-- Cuarta Fila de Contenedores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/row10"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Primer Contenedor de la cuarta fila -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row11"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Segundo Contenedor de la cuarta fila -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row12"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Tercer Contenedor de la cuarta fila -->
                </LinearLayout>
            </LinearLayout>

            <!-- Repite el bloque de LinearLayout para cada fila adicional -->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
