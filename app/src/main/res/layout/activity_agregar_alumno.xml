<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AgregarAlumnoActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_alumno_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_alumno_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:ignore="VisualLintBounds" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_alumno_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_alumno_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <Button
        android:id="@+id/btn_next_alumno1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/siguiente_add_alumno"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_alumno_1" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rd_colegio_alumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/rd_colegio_alumno"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/guideline_alumno_1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_alumno_3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/rd_telf_alumno"

        tools:ignore="VisualLintBounds">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:textColorHint="#546E7A"

            tools:ignore="TouchTargetSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rd_apod_alumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/rd_apod_alumno"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/rd_telf_alumno"
        app:layout_constraintEnd_toStartOf="@+id/guideline_alumno_3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/rd_nombre_alumno"

        tools:ignore="VisualLintBounds">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:textColorHint="#546E7A"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rd_telf_alumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/rd_telf_alumno"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/rd_colegio_alumno"
        app:layout_constraintEnd_toStartOf="@+id/guideline_alumno_3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/rd_apod_alumno"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:textColorHint="#546E7A"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rd_nombre_alumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/rd_nombre_alumno"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/rd_apod_alumno"
        app:layout_constraintEnd_toStartOf="@+id/guideline_alumno_3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline_alumno_5">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:textColorHint="#546E7A"
            tools:ignore="TouchTargetSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spn_modalidad_alumno"
        android:layout_width="280dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/spn_paquete_alumno"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline_alumno_3"
        app:layout_constraintTop_toTopOf="@+id/guideline_alumno_5" />

    <Spinner
        android:id="@+id/spn_paquete_alumno"
        android:layout_width="280dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/spn_horario_alumno"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline_alumno_3"
        app:layout_constraintTop_toBottomOf="@id/spn_modalidad_alumno" />

    <Spinner
        android:id="@+id/spn_horario_alumno"
        android:layout_width="280dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_alumno_1"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline_alumno_3"
        app:layout_constraintTop_toBottomOf="@id/spn_paquete_alumno" />


</androidx.constraintlayout.widget.ConstraintLayout>