<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.InformeActivity">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="171dp"
        android:layout_height="323dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/txt_informe_alumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/alumnos_txt_informe"
            android:textSize="35sp"
            android:translationX="10dp" />

        <AutoCompleteTextView
            android:id="@+id/AutocompleteAlumnos"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:hint="@string/buscar"
            android:imeOptions="actionDone"
            android:minHeight="48dp"
            tools:ignore="LabelFor,VisualLintTextFieldSize" />

        <Button
            android:id="@+id/btn_alumno_asistencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/ver_asistencia_alumno" />

        <Button
            android:id="@+id/btn_alumno_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/generar_pdf_alumno" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
